#	v
#	v/vt
#	v//vn
# Caution: these start from index 1!
f 1/1/1 5/2/5 3/3/3 7/4/7
f 5/1/5 2/2/2 8/3/8 3/4/3
f 2/1/2 6/2/6 4/3/4 8/4/8
f 6/1/6 1/2/1 7/3/7 4/4/4
f 7/1/7 3/2/3 8/3/8 4/4/4
f 1/1/1 6/2/6 2/3/2 5/4/5
